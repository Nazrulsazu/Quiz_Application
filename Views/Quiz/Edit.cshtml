@model Template

<h1>Edit Template</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Topic"></label>
        <select asp-for="Topic" class="form-control">
            <option value="Education">Education</option>
            <option value="Quiz">Quiz</option>
            <option value="Others">Others</option>
        </select>
    </div>

    <div class="form-group">
        <label>Tags</label>
        <input type="text" class="form-control" id="tags-input" placeholder="Enter tags" />
        <small class="form-text text-muted">Start typing to see available tags</small>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input type="file" asp-for="ImageUrl" class="form-control" />
    </div>

    <div class="form-group form-check">
        <input asp-for="IsPublic" class="form-check-input" type="checkbox" />
        <label asp-for="IsPublic" class="form-check-label">Public</label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
